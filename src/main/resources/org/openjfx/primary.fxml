   <children>
      <Label text="Enter your name:" />
      <TextField fx:id="Username" text="Username"/>
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Let's start the game" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
